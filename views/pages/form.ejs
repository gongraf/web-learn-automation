<!DOCTYPE html>
<html>
<head>
    <%- include('../partials/head'); %>
</head>
<body>
    <%- include('../partials/navbar'); %>

<div class="row">
  <div class="col-75">
    <div class="container">
      <form action="/form-validation" method="post">
      
        <div class="row">
          <div class="col-50">
            <h3>Billing Address</h3>
            <label for="fname"><i class="fa fa-user"></i> Full Name</label>
            <input type="text" maxlength="40" id="fname" name="firstname" placeholder="" required>
            <label for="email"><i class="fa fa-envelope"></i> Email</label>
            <input type="email" maxlength="40" id="email" name="email" placeholder="" required>
            <label for="adr"><i class="fa fa-address-card-o"></i> Address</label>
            <input type="text" maxlength="40" id="adr" name="address" placeholder="" required>
            <label for="city"><i class="fa fa-institution"></i> City</label>
            <input type="text" maxlength="40" id="city" name="city" placeholder="" required>

            <div class="row">
              <div class="col-50">
                <label for="state">State</label>
                <input type="text" maxlength="20" id="state" name="state" placeholder="" required>
              </div>
              <div class="col-50">
                <label for="zip">Zip</label>
                <input type="text" maxlength="10" id="zip" name="zip" placeholder="" required>
              </div>
            </div>
          </div>

          <div class="col-50">
            <h3>Payment</h3>
            <label for="cname">Name on Card</label>
            <input type="text" maxlength="40" id="cname" name="cardname" placeholder="" required>
            <label for="ccnum">Credit card number</label>
            <input type="text" maxlength="16" id="ccnum" name="cardnumber" placeholder="" required>
            <label for="expmonth">Exp Month</label>
            <select class="select" id="expmonth" name="expmonth" placeholder="Month" required>
                <option disabled selected></option>
                <option>January</option>
                <option>February</option>
                <option>March</option>
                <option>April</option>
                <option>May</option>
                <option>June</option>
                <option>July</option>
                <option>August</option>
                <option>September</option>
                <option>October</option>
                <option>November</option>
                <option>December</option>
            </select>
            <div class="row">
              <div class="col-50">
                <label for="expyear">Exp Year</label>
                <input type="text" maxlength="4" id="expyear" name="expyear" placeholder="" required>
              </div>
              <div class="col-50">
                <label for="cvv">CVV</label>
                <input type="text" maxlength="4" id="cvv" name="cvv" placeholder="" required>
              </div>
            </div>
          </div>
          
        </div>
        <label>
          <input type="checkbox" <%=sameaddchecked%> name="sameadr"> Shipping address same as billing
        </label>
        <input type="hidden" name="redirect" value=<%=redirect%> />

        <button class="btn">
            Continue to checkout
        </button>
      </form>
    </div>
  </div>
  <div class="col-25">
    <div class="container">
      <h4>Cart <span class="price" style="color:black"><i class="fa fa-shopping-cart"></i> <b>6</b></span></h4>
      
        <p><a href="#">Product1</a> <span class="price">$281</span></p>
      
        <p><a href="#">Product2</a> <span class="price">$161</span></p>
      
        <p><a href="#">Product3</a> <span class="price">$5</span></p>
      
        <p><a href="#">Product4</a> <span class="price">$1.7</span></p>
      
        <p><a href="#">Product5</a> <span class="price">$2</span></p>
      
        <p><a href="#">Product6</a> <span class="price">$2.3</span></p>
      
      <hr>
      <p>Total <span class="price" style="color:black"><b>$453</b></span></p>
    </div>
  </div>
</div>
<script>
$(document).ready(function(){
    var $form = $('form');
    $form.submit(function(){
        $.post($(this).attr('action'), $(this).serialize(), 
        function(response){
            if(response.status=="success") {
                window.location.href = response.redirect;
            }
        },'json')
        .fail(function(error) { 
            alert(error.responseText);
        });
      
      return false
    });
});
</script>
</body>
</html>
